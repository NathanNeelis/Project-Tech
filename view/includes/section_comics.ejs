</section>



<section class="category-boardgames">
    <h2>These people like comics!</h2>
    <div>
        <!--       Category    Comics      -->
        <!--       Category 2    board gamers       -->
        <% for (let i = 0; i < dataComics.length; i++) { %>
        <article>
            <a href="/<%= dataComics[i].profileId %>">
                <img src="uploads/<%= dataComics[i].profilePicture %>" alt="Profile photo">
                <h4>
                    <%= dataComics[i].firstname %> • <%= dataComics[i].age %>
                </h4>
                <p>
                    <%= dataComics[i].location %>
                </p>
            </a>
        </article>
        <% } %>
    </div>

</section>